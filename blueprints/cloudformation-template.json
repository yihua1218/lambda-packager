{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Provisions a Lambda function for compiling npm packages via the lambda-packager package.",
  "Resources": {
    "OutputBucket": {
      "Type": "AWS::S3::Bucket"
    },
    "ExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [ {
             "Effect": "Allow",
             "Principal": {
                "Service": [ "lambda.amazonaws.com" ]
             },
             "Action": [ "sts:AssumeRole" ]
          } ]
        },
        "Policies": [ {
          "PolicyName": "LambdaPackager",
          "PolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Action": [
                  "logs:CreateLogGroup",
                  "logs:CreateLogStream",
                  "logs:PutLogEvents"
                ],
                "Resource": "arn:aws:logs:*:*:*"
              },
              {
                "Effect": "Allow",
                "Action": [
                  "s3:GetObject",
                  "s3:PutObject"
                ],
                "Resource": [
                  "arn:aws:s3:::*"
                ]
              }
            ]
          }
        } ]
      }
    },
    "LambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Handler": "handler.handler",
        "Role": { "Fn::GetAtt" : ["ExecutionRole", "Arn"] },
        "Runtime": "nodejs4.3",
        "Timeout": "300",
        "Code": {
          "S3Bucket": "lambda-packager2",
          "S3Key": "lambda-builder.zip"
        }
      }
    }
  },
  "Outputs": {
    "Bucket": {
      "Value": { "Ref": "OutputBucket" }
    }
  }
}
